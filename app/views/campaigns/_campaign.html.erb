<div id="<%= dom_id campaign %>" class="flex items-center justify-between">
  <h1 class="font-bold text-4xl">
    <%= campaign.title %>
  </h1>

  <div class="flex space-x-3">
    <%= link_to "Edit", edit_campaign_path(@campaign), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= button_to "Destroy", campaign_path(@campaign), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  </div>
</div>
