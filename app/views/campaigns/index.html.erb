<div class="mb-5 flex items-center justify-between">
  <h1 class="font-bold text-4xl">Campaigns</h1>
  <%= link_to "New campaign", new_campaign_path, class: "px-3 border border-black hover:bg-green-100" %>
</div>

<% if @campaigns.any? %>
  <ul class="list-disc list-inside">
    <% @campaigns.each do |campaign| %>
      <li><%= link_to campaign.title, campaign %></li>
    <% end %>
  </ul>
<% else %>
  <p>No campaigns yet.</p>
<% end %>